{
  "parserOptions": {
    // Required for certain syntax usages
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": [
    "promise"
  ],
  "extends": ["airbnb", "plugin:compat/recommended"],
  "env": {
    "browser": true,
    "jquery": true
  },
  "rules": {
    // Removed rule "disallow the use of console" from recommended eslint rules
    "no-console": "off"
  },
  "settings": {
    "polyfills": [
      "Object.assign",
      "Object.entries"
    ]
  }
}
